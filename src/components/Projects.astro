---
import GitHub from "./icons/GitHub.astro"
import NextJS from "./icons/NextJS.astro"
import Tailwind from "./icons/Tailwind.astro"
import Link from "./icons/Link.astro"
import LinkButton from "./LinkButton.astro"
import java from "./icons/java.astro"
import spring from "./icons/spring.astro"
import postgres from "./icons/postgres.astro"
import postman from "./icons/postman.astro"
import react from "./icons/react.astro"

const TAGS = {
  NEXT: {
    name: "Next.js",
    class: "bg-black text-white",
    icon: NextJS,
  },
  TAILWIND: {
    name: "Tailwind CSS",
    class: "bg-[#003159] text-white",
    icon: Tailwind,
  },
  GITHUB: {
    name: "GitHub",
    class: "bg-black text-white",
    icon: GitHub,
  },
  JAVA:{
    name: "Java",
    class: "bg-[#005A8D] text-white",
    icon: java,
  },
  SPRING:{
    name: "Spring",
    class: "bg-[#006400] text-white",
    icon: spring,
  },
  POSTGRES:{
    name: "Postgres",
    class: "bg-[#001B3D] text-white",
    icon: postgres,
  },
  POSTMAN:{
    name: "Postman",
    class: "bg-[#E64A19] text-white",
    icon: postman,
  },
  REACT:{
    name: "React",
    class: "bg-[#4FA3D1] text-white",
    icon: react,
  }
}
const PROJECTS = [
  {
    title: "Salar.io - Plataforma de gesti√≥n de salarios",
    description:
      "Pagina donde se puede calcular, guardar y gestionar los salarios a partir de las horas trabajadas y el salario base del trabajador. Creada desde cero con Java, Spring, PostgreSQL, Postman y Tailwind CSS.",
    link: "about:blank",
    github: "https://github.com/DopoDev/salario",
    image: "/projects/salar.webp",
    tags: [TAGS.JAVA, TAGS.SPRING, TAGS.POSTGRES, TAGS.POSTMAN],
  },
  {
    title: "AdminHotel - Gestor Hotelero",
    description:
      "Gestor hotelero, el cual buscaba simplificar el trabajo de los empleados. Creada desde cero con Java, Spring, PostgreSQL, Postman y React.",
    link: "about:blank",
    github: "https://github.com/DopoDev/adminhotel",
    image: "/projects/adminHotel_img.webp",
    tags: [TAGS.JAVA, TAGS.SPRING, TAGS.POSTGRES, TAGS.REACT, TAGS.TAILWIND],
  },
]
---

<div class="flex flex-col gap-y-16">
  {
    PROJECTS.map(({ image, title, description, tags, link, github }) => (
    <article class="flex flex-col space-x-0 space-y-8 group md:flex-row md:space-x-8 md:space-y-0">
  <div class="w-full md:w-1/2">
    <div class="relative flex flex-col items-center col-span-6 row-span-5 gap-8 transition duration-500 ease-in-out transform shadow-xl overflow-clip rounded-xl sm:rounded-xl md:group-hover:-translate-y-1 md:group-hover:shadow-2xl lg:border lg:border-gray-800 lg:hover:border-gray-700 lg:hover:bg-gray-800/50">
      <img alt="Imagen de App" class="object-cover object-top w-full h-56 transition duration-500 sm:h-full md:scale-110 md:group-hover:scale-105" loading="lazy" src={image} />
    </div>
  </div>

  <div class="w-full md:w-1/2 md:max-w-lg">
    <h3 class="text-2xl font-bold text-gray-800 dark:text-gray-100">
      {title}
    </h3>
    <div class="flex flex-wrap mt-2">
      <ul class="flex flex-row mb-2 gap-x-2">
          {tags.map((tag) => (
            <li>
              <span
                class={`flex gap-x-2 rounded-full text-xs ${tag.class} py-1 px-2 `}
              >
                <tag.icon class="size-4" />
                {tag.name}
              </span>
            </li>
          ))}
        </ul>

      <div class="mt-2 text-gray-700 dark:text-gray-400">{description}</div>
      <footer class="flex items-end justify-start mt-4 gap-x-4">
          {github && (
            <LinkButton href={github}>
              <GitHub class="size-6" />
              Code
              
            </LinkButton>
          )}
          {link && (
            <LinkButton href={link}>
              <Link class="size-4" />
              Preview
            </LinkButton>
          )}
        </footer>
    </div>
  </div>
</article>
    ))
  }
</div>



